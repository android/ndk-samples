<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_kotlin_jni"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kotlinjni.KotlinJni">

    <TextView
        android:id="@+id/simple_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_msg"
        app:layout_constraintBottom_toBottomOf="@+id/activity_kotlin_jni"
        app:layout_constraintLeft_toLeftOf="@+id/activity_kotlin_jni"
        app:layout_constraintRight_toRightOf="@+id/activity_kotlin_jni"
        app:layout_constraintTop_toTopOf="@+id/activity_kotlin_jni" />

</android.support.constraint.ConstraintLayout>
